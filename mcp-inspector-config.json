{
  "mcpServers": {
    "adr-analysis-server": {
      "command": "node",
      "args": ["dist/src/index.js"],
      "env": {
        "NODE_ENV": "development",
        "PROJECT_PATH": ".",
        "ADR_DIRECTORY": "docs/adrs",
        "LOG_LEVEL": "info",
        "AI_PROVIDER": "azure",
        "EXECUTION_MODE": "full"
      }
    },
    "adr-analysis-server-test": {
      "command": "node",
      "args": ["dist/src/index.js", "--test"],
      "env": {
        "NODE_ENV": "test",
        "PROJECT_PATH": ".",
        "ADR_DIRECTORY": "docs/adrs",
        "LOG_LEVEL": "debug"
      }
    },
    "azure_ai_foundry_mcp": {
      "command": "uvx",
      "args": [
        "--prerelease=allow",
        "--from",
        "git+https://github.com/azure-ai-foundry/mcp-foundry.git",
        "run-azure-ai-foundry-mcp",
        "--envFile",
        ".env"
      ]
    }
  }
}
